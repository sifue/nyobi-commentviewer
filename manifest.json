{
  "name": "N予備コメビュ",
  "version": "2.1",
  "description": "N予備校の生放送授業において、コメント一覧を表示するChrome拡張 (ISC License)",
  "permissions": [
    "scripting",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "*://www.nnn.ed.nico/*",
    "*://nnn.ed.nico/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "comment-viewer.css",
        "comment-viewer.js"
      ],
      "matches": [
        "*://www.nnn.ed.nico/*",
        "*://nnn.ed.nico/*"
      ]
    }
  ],
  "manifest_version": 3,
  "icons": {
    "16": "images/en_icon16.png",
    "48": "images/en_icon48.png",
    "128": "images/en_icon128.png"
  }
}
